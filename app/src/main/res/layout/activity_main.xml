<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/activity_main"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <Button
            android:text="show Toast Hello"
            android:layout_height="70dp" android:id="@+id/button" android:onClick="showToastHello"
            android:layout_width="wrap_content" android:gravity="center" android:layout_gravity="center|top"
            android:layout_marginTop="70dp"/>
    <Button
            android:text="show Toast Bye"
            android:layout_height="70dp" android:id="@+id/button4" android:onClick="showToastBye"
            android:layout_width="wrap_content" android:gravity="center" android:layout_gravity="bottom|center"
            android:layout_marginBottom="70dp"/>

</LinearLayout>